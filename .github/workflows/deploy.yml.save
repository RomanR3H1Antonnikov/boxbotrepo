name: Deploy to Raspberry Pi

on:
  push:
    branches:
      - master

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up SSH keys
        run: |
          mkdir -p ~/.ssh
          echo "${{ secrets.SSH_PRIVATE_KEY }}" > ~/.ssh/id_rsa
          chmod 600 ~/.ssh/id_rsa
          ssh-keyscan -t rsa ssh pi@192.168.1.86 >> ~/.ssh/known_hosts

      - name: Deploy to Raspberry Pi
        run: |
          ssh pi@192.168.1.86 "cd /home/pi/boxbot && git pull && sudo systemctl restart boxbot.service"
